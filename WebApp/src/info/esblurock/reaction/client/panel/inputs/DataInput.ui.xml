<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:m="urn:import:gwt.material.design.client.ui" xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:user="urn:import:info.esblurock.reaction.client.panel" xmlns:gwt="urn:import:gwtupload.client">

	<ui:style>
	/* Main container */
	.GWTUpld .prgbar {
		border: 2px solid #faf9f7;
		border-right: 2px solid #848280;
		border-bottom: 2px solid #848280;
		background-color: #AAAAAA;
		height: 14pt;
		width: 300px;
	}
	
	/* background */
	.GWTUpld .prgbar-back {
		background: #ffffff;
		border: 1px solid #999999;
		overflow: hidden;
		padding: 1px;
	}
	
	/* done */
	.GWTUpld .prgbar-done {
		background: #d4e4ff;
		font-size: 0;
		height: 100%;
		float: left;
	}
	
	.gwt-FileUpload {
		color: purple;
		font-weight: bold;
	}
	
	.important {
		font-weight: bold;
	}
	
	.gwt-MaterialButton {
		color: black;
		background: white;
	}
	
	.gwt-TextArea {
		font-family: Consolas, Monaco, Lucida Console, Liberation Mono,
			DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New,
			monospace !important;;
		color: black;
		background: white;
	}
	</ui:style>
	<m:MaterialCollapsibleItem>
		<m:MaterialCollapsibleHeader
			backgroundColor="cyan lighten-5">
			<m:MaterialLink ui:field="objecttitle" text="Input"
				textColor="blue" iconType="CREATE" iconPosition="LEFT"/>
		</m:MaterialCollapsibleHeader>
		<m:MaterialCollapsibleBody>
			<m:MaterialRow>
				<m:MaterialColumn grid="s6">
					<m:MaterialLabel ui:field="uploadfile" />
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn grid="s6">
					<m:MaterialLabel ui:field="uploadID" />
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn grid="s1">
					<m:MaterialRadioButton ui:field="submitHTTP"
						name="type" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="s2">
					<m:MaterialButton ui:field="uploadHTTP"
						textColor="blue-text text-darken-2 light-blue lighten-5" waves="LIGHT" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="s9">
					<m:MaterialTextBox ui:field="httpaddress" />
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn grid="s1">
					<m:MaterialRadioButton ui:field="fileinput"
						name="type" />
				</m:MaterialColumn>
				<m:MaterialColumn ui:field="columnfile" grid="s5">
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn grid="s1">
					<m:MaterialRadioButton ui:field="submitText"
						name="type" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="s2">
					<m:MaterialButton ui:field="uploadText"
						textColor="blue-text text-darken-2 light-blue lighten-5" waves="LIGHT" />
				</m:MaterialColumn>
				<m:MaterialColumn grid="s5">
					<m:MaterialTextBox ui:field="uploadTextName" />
				</m:MaterialColumn>
			</m:MaterialRow>
			<m:MaterialRow>
				<m:MaterialColumn grid="s12">
					<m:MaterialTextArea ui:field="textarea"
						ui:text=" copy paste text here" />
				</m:MaterialColumn>
			</m:MaterialRow>
		</m:MaterialCollapsibleBody>
	</m:MaterialCollapsibleItem>
</ui:UiBinder> 