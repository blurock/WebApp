<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
	<m:MaterialModal ui:field="popup"  type="BOTTOM_SHEET" dismissable="false" inDuration="500" outDuration="500">
		<m:MaterialModalContent ui:field="modalcontent">
			<m:MaterialTitle ui:field="textarea" />
		</m:MaterialModalContent>
		<m:MaterialModalFooter>
			<m:MaterialButton ui:field="btnOK" waves="GREEN"
				type="FLAT" text="Close" />
		</m:MaterialModalFooter>
	</m:MaterialModal>
</ui:UiBinder> 