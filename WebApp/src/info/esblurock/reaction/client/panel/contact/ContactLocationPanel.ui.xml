<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	</ui:style>
			<m:MaterialCollapsibleItem>
				<m:header>
					<m:MaterialLink ui:field="adresscontact" text="Organization Address"
						icon="mdi-communication-contacts" />
				</m:header>
				<m:content>
					<g:HTMLPanel>
						<m:MaterialRow>
							<m:MaterialColumn grid="s12 m6">
								<m:MaterialTextArea ui:field="addressAddress"
									placeholder="Address"/>
							</m:MaterialColumn>
						</m:MaterialRow>
						<m:MaterialRow>
							<m:MaterialColumn grid="s12 m4">
								<m:MaterialTextBox ui:field="city"
									placeholder="City">
								</m:MaterialTextBox>
							</m:MaterialColumn>
							<m:MaterialColumn grid="s12 m4">
								<m:MaterialTextBox ui:field="country"
									placeholder="Country">
								</m:MaterialTextBox>
							</m:MaterialColumn>
							<m:MaterialColumn grid="s12 m4">
								<m:MaterialTextBox ui:field="postcode"
									placeholder="Postcode">
								</m:MaterialTextBox>
							</m:MaterialColumn>
						</m:MaterialRow>
						<m:MaterialRow>
							<m:MaterialColumn grid="s4">
								<m:MaterialButton
									ui:field="getCoordinates"
									text="Get Coordinates" />
							</m:MaterialColumn>
							<m:MaterialColumn grid="s4">
								<m:MaterialTextBox 
									ui:field="gpslatitude"
									text="55.7 N" 
									placeholder="Latitude" />
							</m:MaterialColumn>
							<m:MaterialColumn grid="s4">
								<m:MaterialTextBox 
									ui:field="gpslongitude"
									text="13.2 E" 
									placeholder="Longitude" />
							</m:MaterialColumn>
						</m:MaterialRow>
					</g:HTMLPanel>
				</m:content>
			</m:MaterialCollapsibleItem>
</ui:UiBinder> 